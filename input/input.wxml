<!--valid input 组件-->
<view class="{{'valid_input_content flex'}}">
  <slot name="label"></slot>
  <input placeholder="{{placeHolder}}" 
         value="{{value}}"
         class="{{error?'valid_input valid_error_tip':'valid_input'}}" 
         type="{{type}}" 
         data-validType="{{validType}}"
         data-validToast="{{validToast}}"
         password="{{password}}"
         disabled="{{disabled}}"
         maxlength="{{maxLength}}"
         adjust-position="{{adjustPosition}}"
         confirm-type="{{confirmType}}"
         focus="{{focus}}"
         placeholder-class="{{placeholderClass}}"
         bindinput=input
         bindchange=change
         bindfocus=focus
         bindconfirm=confirm
         bindblur=blur
         bindsubmit=submit
         name="{{name}}"
  >
  </input>
  <slot name="extro"></slot>
</view>
